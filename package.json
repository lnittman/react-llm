{
  "name": "react-llm-monorepo",
  "private": true,
  "description": "chat with your react components in the browser",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/react-llm.git"
  },
  "license": "MIT",
  "author": "Your Name <email@example.com>",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "turbo run build --filter=react-llm",
    "build": "turbo run build",
    "build:react-llm": "turbo run build --filter=react-llm",
    "dev": "turbo run dev --filter=!@react-llm/browser-extension",
    "dev:all": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:docs": "turbo run dev --filter=@react-llm/docs",
    "dev:apps": "turbo run dev --filter=web --filter=@react-llm/docs",
    "dev:react-llm": "turbo run dev --filter=react-llm",
    "dev:extension": "turbo run dev --filter=@react-llm/browser-extension",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "format": "biome format . --write",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo run build --filter=./packages/* && changeset publish",
    "upload-cdn": "node scripts/upload-cdn.js",
    "validate-release": "node scripts/validate-release.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@changesets/changelog-github": "^0.4.8",
    "@biomejs/biome": "1.5.3",
    "turbo": "^1.10.16",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}